---
const { translations, isRTL } = Astro.props;
---

<section class="pt-32 pb-20 px-4">
  <div class="container mx-auto max-w-4xl text-center">
    <div class="animate-float mb-12">
      <div
        class="w-35 h-35 mx-auto bg-gradient-to-br from-purple-400 to-primary rounded-2xl flex items-center justify-center shadow-xl logo"
      >
        <img src="/favicon.svg" alt="Shecan DNS" class="w-25 h-25 text-white" />
      </div>
    </div>

    <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
      {translations.hero.title}
    </h1>

    <p class="text-xl text-gray-600 mb-12 max-w-2xl mx-auto">
      {translations.hero.subtitle}
    </p>

    <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12">
      <a
        href="https://raw.githubusercontent.com/raminsharifian/shecan.ir-linux.binding/main/src/shecan-dns.sh"
        download="shecan-dns.sh"
        class="bg-primary hover:bg-opacity-90 text-white font-semibold py-4 px-8 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
        id="download"
      >
        {translations.hero.download}
      </a>
    </div>

    <div class="bg-gray-50 rounded-2xl p-6">
      <p class="text-gray-600 mb-4">{translations.hero.command}</p>
      <div class="bg-gray-900 rounded-xl p-4 command-area">
        <code class="text-green-400 font-mono text-sm">
          curl -sSL
          https://raw.githubusercontent.com/raminsharifian/shecan.ir-linux.binding/main/src/shecan-dns.sh
          | bash
        </code>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  .logo {
    backdrop-filter: blur(0.25rem) brightness(200%);
  }
  .command-area {
    white-space: nowrap;
    overflow: hidden;
    overflow-x: auto;
  }
</style>
